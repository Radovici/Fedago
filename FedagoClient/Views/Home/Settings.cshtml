            </div>
        </section>

        <!-- Panel (Spotlight) -->
        <section class="panel banner" id="ngrok">
            <div class="content span-4 color0">
                <h2 class="major">ngrok Settings</h2>
                <form asp-controller="Home" asp-action="UpdateSettings" method="post">
                    NGrok AuthToken: <input type="text" name="ngrokAuthToken" value="@Model.NGrokAuthToken" placeholder="<enter your ngrok Auth Token here>" />
                    <br />
                    <button>Update Settings</button>
                </form>
                <br />
                <ul class="actions">
                    <li><a href="#configuration" class="button primary color1 circle icon fa-angle-right">Next</a></li>
                </ul>
            </div>
        </section>

        <!-- Panel (Spotlight) -->
