<script>
    $(document).ready(function () {
        // Add smooth scrolling to all links
        $("a").on('click', function (event) {

            // Make sure this.hash has a value before overriding default behavior
            if (this.hash !== "") {
                // Prevent default anchor click behavior
                event.preventDefault();

                // Store hash
                var hash = this.hash;

                // Using jQuery's animate() method to add smooth page scroll
                // The optional number (1000) specifies the number of milliseconds it takes to scroll to the specified area
                $('html, body').animate({
                    scrollLeft: $(hash).offset().left - 250
                }, 1000, function () {
                    // Add hash (#) to URL when done scrolling (default click behavior)
                    window.location.hash = hash;
                });
            } // End if
        });

        var anchor = document.getElementById('@Model.Anchor');
        if (anchor != null) {
            anchor.scrollIntoView(true);
        }
    });

    function populateDatabase(Id, Name, ConnectionString, Table) {
        //document.forms['configureDatabase'].elements['Id'].value = Id;
        document.forms['configureDatabaseForm'].elements['Name'].value = Name;
        document.forms['configureDatabaseForm'].elements['ConnectionString'].value = ConnectionString;
        document.forms['configureDatabaseForm'].elements['Table'].value = Table;
        return false;
    }

    function populateDirectory(Id, Name, Path) {
        //document.forms['configureDirectoryForm'].elements['Id'].value = Id;
        document.forms['configureDirectoryForm'].elements['Name'].value = Name;
        document.forms['configureDirectoryForm'].elements['Directory'].value = Path;
        return false;
    }

    function populateRestfulApi(Id, Name, Url, Body) {
        //document.forms['configureDirectoryForm'].elements['Id'].value = Id;
        document.forms['configureRestfulApiForm'].elements['Name'].value = Name;
        document.forms['configureRestfulApiForm'].elements['Url'].value = Url;
        document.forms['configureRestfulApiForm'].elements['Body'].value = Body;
        return false;
    }
</script>

