@model DataBazrPeer.Configurations.ApplicationConfiguration

@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to build ASP.NET apps that can run anywhere.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    There are powerful new features in Visual Studio for building modern web apps.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div>
        <div>
            <h3>Steps</h3>
            1: <a href="http://www.databazr.com/login" target="_blank">login</a> <br />
            2: <a href="http://www.databazr.com/Admin/ManageClientsAdmin/List">create API client</a> <br />
        </div>
        <hr />
        <br />
        <div>
            3: connect to server. Copy the "Client Id" and "Client Secret" from the API client (from step 2); paste those strings below. <br />
            <form asp-controller="Home" asp-action="GetToken" method="post">
                Id: <input type="text" name="Id" placeholder="Input your Id here" value="@string.Format(Model != null ? Model.KeyValuePairs["Id"] : string.Empty)" />
                Secret: <input type="text" name="Secret" placeholder="Input your Secret here" value="@string.Format(Model != null ? Model.KeyValuePairs["Secret"] : string.Empty)" />
                <br />
                Callback: <input type="text" name="CallbackUrl" placeholder="Input your CallbackUrl here" value="@string.Format(Model != null ? Model.KeyValuePairs["CallbackUrl"] : string.Empty)" />
                <br />
                Token: <textarea name="Token">@string.Format(Model != null ? Model.KeyValuePairs["Token"] : string.Empty)"</textarea>
                <br />
                <button>Connect</button>
            </form>
        </div>
        <br />
        <div>
            4: add data sources. <br />
            <div>
                <form asp-controller="Home" asp-action="AddDatabase" method="post">
                    ConnectionString: <input type="text" name="ConnectionString" alt="<ConnectionString>" /><br />
                    Table (view or function): <input type="text" name="Table" alt="<Table>" /><br />
                    IsFunction: <input type="checkbox" name="IsFunction" alt="<IsFunction>" /><br />
                    <button>Add Database Configuration</button>
                </form>
            </div>
            <br />
            <div>
                <form asp-controller="Home" asp-action="AddDirectory" method="post">
                    Directory: <input type="text" name="Directory" alt="<Directory>" />
                    <button>Add Directory Path</button>
                </form>
            </div>
            <br />
            <div>
                <form asp-controller="Home" asp-action="AddRestfulUrl" method="post">
                    Url: <input type="text" name="URL" alt="<Restful URL>" />
                    Body: <input type="text" name="Body" alt="<Body>" />
                    <button>Add Restful URL</button>
                </form>
            </div>
            <br />
            <div>
                <ol>
                    @foreach (DataBazrPeer.Configurations.IDataSource dataSource in Model.DataSources)
                    {
                        <li>@dataSource.Display</li>
                    }
                </ol>
            </div>
        </div>
        <br />
        <div>
            5: publish data sources to server. <br />
            <form asp-controller="Home" asp-action="Publish" method="post">
                <button>Publish</button>
            </form>
        </div>
        <br />
        <div>
            6: test. <br />
        </div>
        <br />
    </div>
</div>